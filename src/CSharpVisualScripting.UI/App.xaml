<Application x:Class="CSharpVisualScripting.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Accent override: Green-Dark branding -->
            <SolidColorBrush x:Key="MahApps.Brushes.Accent" Color="#0F8A5F"/>
            <SolidColorBrush x:Key="MahApps.Brushes.Accent2" Color="#0C6F4C"/>
            <SolidColorBrush x:Key="MahApps.Brushes.Highlight" Color="#0F8A5F"/>

            <!-- Pin colors based on type -->
            <SolidColorBrush x:Key="ExecutionPinBrush" Color="White"/>
            <SolidColorBrush x:Key="BoolPinBrush" Color="#DC3030"/>
            <SolidColorBrush x:Key="IntPinBrush" Color="#48B0B0"/>
            <SolidColorBrush x:Key="FloatPinBrush" Color="#A3DC74"/>
            <SolidColorBrush x:Key="StringPinBrush" Color="#FC66C4"/>
            <SolidColorBrush x:Key="ObjectPinBrush" Color="#4880FF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
